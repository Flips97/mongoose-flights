<form id="new-ticket" action="/flights/<%= flight._id %>/tickets" method="POST">
    <label>Seat:</label>
    <input type="text" name="seat" placeholder="A1 - F99" required pattern="[A-F][1-9]\d?">>
    <label>Price:</label>
    <input type="text" name="price" placeholder="0-999" required>
    <input type="submit" value="Create Ticket">
</form>

