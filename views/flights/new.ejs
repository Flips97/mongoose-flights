<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline</label>
  <select name="airline" required>
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Delta">Delta</option>
    <option value="Spirit">Spirit</option>
  </select>
  <label>Airport</label>
  <select name="airport" required>
    <option value="LAX">LAX</option>
    <option value="DEN">DEN</option>
    <option value="SAN">SAN</option>
    <option value="JFK">JFK</option>
    <option value="SFO">SFO</option>
  </select>
  <label>FlightNo:</label>
  <input type="text" name="flightNo" placeholder="####" required>
  <label>Depart:</label>
  <input type="datetime-local" name="departs" required>
  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>
